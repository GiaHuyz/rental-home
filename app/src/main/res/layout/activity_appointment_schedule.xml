<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Chọn Ngày Trong Tuần -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn Ngày"
        android:textSize="18sp" />

    <!-- CheckBox cho mỗi ngày trong tuần -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox android:id="@+id/checkbox_mon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thứ 2" />

        <!-- Thêm CheckBox tương tự cho các ngày khác -->
        <!-- ... -->
    </LinearLayout>

    <!-- Khoảng Thời Gian -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khoảng Thời Gian (2 giờ)"
        android:textSize="18sp" />

    <!-- TimePicker cho Giờ Bắt Đầu -->
    <TimePicker
        android:id="@+id/timePickerStart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- TimePicker cho Giờ Kết Thúc -->
    <TimePicker
        android:id="@+id/timePickerEnd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- Nút Đặt Lịch Hẹn -->
    <Button
        android:id="@+id/btnScheduleAppointment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đặt Lịch Hẹn" />
</LinearLayout>
